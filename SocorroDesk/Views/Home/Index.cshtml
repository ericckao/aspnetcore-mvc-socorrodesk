@model List<Chamado>;

@{
    ViewData["Title"] = "SocorroDesk";
}
            
<div class="d-flex flex-column flex-xxl-row">
    <section class="mt-3">
        <div class="card mx-auto" style="width: 18rem;">
            <!-- Adicionando a classe mx-auto para centralizar horizontalmente -->
            <img src="https://www.newmalharia.com.br/imagens/avatar.png" class="card-img-top" alt="...">
            <div class="card-body d-flex flex-column justify-content-center">
                <!-- Adicionando as classes para centralizar verticalmente -->
                <p class="text-center">
                    Erik Fernandes<br />
                    Chapa: 38976 <br />
                    Departamento: Gestão Imobiliária <br />
                    Empresa: Coyote Tech<br />
                    E-mail: erikfernandes@coyote.com
                </p>
            </div>
        </div>
    </section>


    <section class="mx-auto mt-4">
        <div class="d-flex flex-row justify-content-between mx-3 mt-xxl-5">
            <div>
                <h2 class="text-center">Meus Chamados</h2>
            </div>
            <div>
                <a class="btn btn-success" asp-controller="Home" asp-action="NovoChamado">Novo Chamado</a>
            </div>
        </div>

        <div class="p-3">
            <table class="table table-dark table-hover">
                <thead>
                    <tr class="fonte-cab-tabela text-uppercase text-center">
                        <th scope="col">Chamado</th>
                        <th class="d-none d-sm-table-cell d-xxl-none" scope="col">Chapa</th>
                        <th scope="col">Assunto</th>
                        <th class="d-none d-xl-table-cell" scope="col">Ultima Atualização</th> <!-- Adicionando d-none d-md-table-cell para ocultar em telas menores que "md" -->
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    <!-- Verificando se há registros no banco -->
                    @if (Model != null)
                    {
                        @foreach (var chamado in Model)
                        {
                            <tr>
                                <th scope="row">@chamado.Id</th>
                                <td class="d-none d-sm-table-cell d-xxl-none">@chamado.Chapa</td>
                                <td>@chamado.Assunto</td>
                                <td class="d-none d-md-table-cell align-middle">@chamado.UltimaAtualizacao</td> <!-- Adicionando d-none d-md-table-cell para ocultar em telas menores que "md" -->
                                <td>@chamado.Status</td>
                                <td><a class="btn btn-primary" asp-controller="Home" asp-action="Acessar" asp-route-id="@chamado.Id">Acessar</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>
